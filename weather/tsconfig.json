{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@api/*": ["src/api/*"],
      "@helpers/*": ["src/helpers/*"],
      "@global/*": ["src/global/*"],
      "@sagas/*": ["src/store/sagas/*"],
      "@store/*": ["src/store/*"],
      "@hooks/*": ["src/hooks/*"],
      "@selectors/*" : ["src/store/selectors/*"],
      "@weather-icons/*": ["src/assets/weather-icons/*"],
      "@background-images/*" :["src/assets/background-images/*"],
      "@styles/*" :["src/styles/*"]
    }
  },
  "include": [
    "src",
    "polyfills.ts"
  ]
}
